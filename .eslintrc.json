{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "tabWidth": 2,
        "useTabs": true,
        "singleQuote": false,
        "semi": false
      }
    ],
    "camelcase": "off",
    "no-useless-constructor": "off",
    "indent": ["error", "tab"],
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
  }
}